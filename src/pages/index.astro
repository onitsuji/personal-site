---
import "../styles/global.css";
import { Image } from "astro:assets";
import MailIcon from "../assets/mail.svg";
import XIcon from "../assets/x.svg";
import GithubIcon from "../assets/github.svg";
import LinkedinIcon from "../assets/linkedin.svg";
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>Justin O'Connell | Fullstack Developer</title>
    </head>
    <body class="bg-brand-bg">
        <!-- Wrapper -->
        <div class="min-h-svh mx-auto max-w-3xl pt-5">
            <header class="space-y-2.5">
                <!-- Title -->
                <h1 class="text-lg text-brand-primary font-semibold">
                    Hi, I'm Justin
                </h1>
                <p class="text-sm text-brand-accent">
                    Welcome to my corner of the web, I am a fullstack developer
                    from the United Kingdom. I love to solve problems and learn
                    new things, I don't care what tech is used to solve them.
                </p>
                <!-- Icons -->
                <div class="flex flex-row items-center mt-4 space-x-2.5">
                    <div>
                        <button id="copy-email">
                            <MailIcon
                                class="size-6 text-brand-accent hover:text-brand-primary transition-colors duration-100"
                            />
                        </button>
                    </div>
                    <div>
                        <XIcon
                            class="size-6 text-brand-accent hover:text-brand-primary transition-colors duration-100"
                        />
                    </div>
                    <div>
                        <GithubIcon
                            class="size-6 text-brand-accent hover:text-brand-primary transition-colors duration-100"
                        />
                    </div>
                    <div>
                        <LinkedinIcon
                            class="size-6 text-brand-accent hover:text-brand-primary transition-colors duration-100"
                        />
                    </div>
                </div>
                <!-- Description -->
            </header>
            <!-- Built Section -->
            <section class="mt-14">
                <!-- Heading -->
                <h2 class="font-semibold text-brand-primary">
                    üõ†Ô∏è What I've Built Recently
                </h2>
                <div>
                    <!-- Card -->
                </div>
            </section>
        </div>

        <script>
            const mailButton = document.getElementById(
                "copy-email",
            ) as HTMLElement;
            mailButton.addEventListener("click", async () => {
                await navigator.clipboard.writeText(
                    "itsjustinoconnell@gmail.com",
                );
            });
        </script>
    </body>
</html>
